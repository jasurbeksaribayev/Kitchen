<UserControl
    x:Class="WPFwithEF.Controllers.MealController"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFwithEF.Controllers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="Auto"
    Height="Auto"
    Margin="2"
    Background="#FDFBFD"
    mc:Ignorable="d">

    
        <StackPanel Width="Auto">
            <TextBlock
                x:Name="MealNameTxt"
                Margin="15,3,10,0"
                Text="DefaultName"
                Foreground="Black"
                FontWeight="Bold"
                />
            <Image
                x:Name="MealImage"
                Width="110"
                Height="50"
                Margin="70,10,0,0" />
            <TextBlock
                x:Name="MealCostTxt"
                Margin="15,7,100,5"
                Text="DefaultCost" 
                Foreground="#FF5800"
                FontWeight="Bold"/>
        </StackPanel>

</UserControl>
